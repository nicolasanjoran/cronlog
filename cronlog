#!/bin/sh
OUTPUT_PATH="$HOME/.cronlog/logs"
OUTPUT_CSV="$OUTPUT_PATH/cronlog.csv"
mkdir -p $OUTPUT_PATH
touch $OUTPUT_CSV

startTime=`date +%s`

scriptname=$1
shift
echo "\n----------------------------------------------------" >> $OUTPUT_PATH/logs/$scriptname.log
echo "| Starting at $startTime" >> $OUTPUT_PATH/logs/$scriptname.log
echo "----------------------------------------------------" >> $OUTPUT_PATH/logs/$scriptname.log
$* >> $OUTPUT_PATH/logs/$scriptname.log
result=$?

sed -i.bak "/^$scriptname,/d" $OUTPUT_CSV
rm $OUTPUT_CSV.bak

endTime=`date +%s`

echo "$scriptname,$startTime,$endTime,$result" >> $OUTPUT_CSV